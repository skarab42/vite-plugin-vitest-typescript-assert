	"author": {
		"name": "skarab42",
		"email": "contact@skarab42.dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/skarab42/vite-plugin-vitest-typescript-assert.git"
	},
	"homepage": "https://github.com/skarab42/vite-plugin-vitest-typescript-assert",
	"bugs": "https://github.com/skarab42/vite-plugin-vitest-typescript-assert/issues",
	"funding": "https://github.com/sponsors/skarab42",
	"license": "MIT",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"main": "./build/index.js",
	"module": "./build/index.mjs",
	"types": "./build/index.d.ts",
	"files": [
		"build"
	],
	"scripts": {
		"up-hooks": "npx simple-git-hooks",
		"prepare": "pnpm up-hooks",
		"build": "tsup",
		"watch": "nodemon ./src/program/index.ts",
		"check": "tsc -p tsconfig.check.json",
		"format": "prettier . --write --ignore-path .gitignore",
		"lint": "eslint . --fix --ext .js,.cjs,.ts --ignore-path .gitignore",
		"test": "pnpm check && pnpm lint -- --max-warnings=0",
		"semantic-release": "semantic-release --branches main"
	},
	"devDependencies": {
		"@types/node": "^18.0.0",
		"@typescript-eslint/eslint-plugin": "^5.29.0",
		"@typescript-eslint/parser": "^5.29.0",
		"eslint": "^8.18.0",
		"eslint-config-prettier": "^8.5.0",
		"lint-staged": "^13.0.3",
		"magic-string": "^0.26.2",
		"nodemon": "^2.0.19",
		"prettier": "^2.7.1",
		"semantic-release": "^19.0.3",
		"simple-git-hooks": "^2.8.0",
		"ts-node": "^10.8.2",
		"tslib": "^2.4.0",
		"tsup": "^6.1.2",
		"typescript": "^4.7.4",
		"vite": "^2.9.13",
		"vitest": "^0.17.0"
	},
	"peerDependencies": {
		"typescript": "^4.7.4"
	},
	"keywords": [
		"typescript",
		"assertion",
		"assert",
		"expect",
		"vitest",
		"vite",
		"test"
	],
	"engines": {
		"node": ">=12",
		"pnpm": ">=6"
	},
	"packageManager": "pnpm@6.32.4"
}
